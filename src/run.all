#/!bin/bash

# allow execution of the main script
chmod +x main.py

# initial question
while true; do
  read -p "=== Run project pipe? [y/n]" ans
  if [[ $ans  =~ "y" ]]
  then
    filename=data/log/"$(date +"%Y_%m_%d_%I_%M_%p").log"
    echo ">>> executing..."
    python3 main.py > $filename
    echo "=== execution finished successfully"
    cat $filename
    exit 0
  elif [[ $ans  =~ "n" ]]
  then
    exit 0
  fi  
done
